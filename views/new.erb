<h1>Adicionar Item</h1>
<form action="/new" method="POST">
	<div class="row">
		<div class="form-group col-md-4">
			<label for="campo1">Name</label>
			<input type="text" class="form-control" id="campo1" placeholder="digite o valor" name="name"> 
		</div>
		<div class="form-group col-md-4">
			<label for="campo2">Email</label>
			<input type="text" class="form-control" id="campo2" placeholder="digite o valor" name="email"> 
		</div>
		<div class="form-group col-md-4">
			<label for="campo3">Cellphone</label>
			<input type="text" class="form-control" id="campo3" placeholder="digite o valor" name="cellphone"> 
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<button type="submit" class="btn btn-primary">Salvar</button>
			<a href="/new" class="btn btn-default">Cancelar</a>
		</div>
	</div>
</form>